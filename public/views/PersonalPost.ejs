    <header>
      
    </header>

    <!-- End of the header -->

    <div class="wrapper">
      <section class="posts-wrapper">
        <h2><%for(let n = 0; n < post.length;n++){%>
              <%if(post_id == post[n].post_id){%>
                <%for(let i = 0; i < user.length;i ++){%>
                    <%if(post[n].user_id == user[i].user_id) {%>
                      <%=user[i].username%>
                      <%break%>
                    <%}%>
                <%}%>
              <%}%>
            <%}%></h2>
        
        <div class="blogpost-card">
          
          <h3 class="post-title">
            <%for(let n = 0; n < post.length;n++){%>
              <%if(post_id == post[n].post_id){%>
                <%= post[n].title%>
          </h3> 
              <div class="post-body">
                <p>
                <%= post[n].content%>
                </p>
              <%}%>
            <%}%>
          </div>
        </div>
      </section>

      <!-- End of Blogs Section -->
        <div class="text-like">LIKE</div>
      <form action="#"> 
          <div class="content">
            <button type="submit" id="" name="" class="like-button"><span class="heart"></span></button>
          </div>
      </form>


        <!-- End of popular posts section -->

      <div class="contact-container">
          <h2>COMMENT</h2>
          <span class="person_comment"><ion-icon name="person"></ion-icon></span>
          <form action="/Comment_Post" method="post">
              <div class="name_comment">
                  <%=nameuser%>
                  
              </div>
            <textarea
              name="comment"
              id="comment"
              cols="30"
              rows="10"
              placeholder="Your Message"
            ></textarea>

            <button type="submit">Send</button><br><br>
          </form>
          <hr>
          <% for(let i = 0; i < comment.length; i++){ %>
            <div class="name_onComment">
                  <%if(post_id == comment[i].post_id){ %>
                      <span class="person_comment"><ion-icon name="person"></ion-icon></span>
                    
                    <%for(let n = 0; n < user.length;n++){%>
                      <%if(comment[i].user_id == user[n].user_id){%>
                        <%=user[n].username%> 
                        <%break%>
                        <%}%>  
                        <%}%>  
                      <p>
                          <div class="message_onComment"><%= comment[i].comment%></div>   
                      </p>
                      <hr>
                  <%}%>  
            </div> 
          <%}%> 
      </div>
    </div>       
    <!-- End of Contact Section -->

